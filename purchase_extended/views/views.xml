<odoo>
  <data>
          <record id="view_partner_form_extended" model="ir.ui.view">
        <field name="name">res.partner.form.extended</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
                <xpath expr="//div[1]" position="after">
                    <header>
                                        <button name="make_checker" string="Make as Checker" type="object" class="oe_highlight" attrs="{'invisible':[('status','!=','Maker')]}"/>

                        <field name="status" widget="statusbar"/>

                    </header>
            </xpath>
          </field>
      </record>
  </data>
</odoo>
