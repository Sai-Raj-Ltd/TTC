<odoo>
  <data>
          <record id="view_partner_form_extended" model="ir.ui.view">
        <field name="name">res.partner.form.extended</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
                <xpath expr="//div[1]" position="after">
                    <header>
                                        <button name="make_checker" string="Approve" type="object" class="oe_highlight" attrs="{'invisible':[('status','!=','Draft')]}"/>

                        <field name="status" widget="statusbar"/>

                    </header>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>
      
      
      
                <record id="product_template_form_view_extended" model="ir.ui.view">
        <field name="name">product.template.common.form.extended</field>
        <field name="model">product.template</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>
      
      
      
                      <record id="product_template_kanban_view_extended" model="ir.ui.view">
        <field name="name">product.template.common.kanban.extended</field>
        <field name="model">product.template</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>
      
      
                           <record id="purchase_order_form_extended" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']//field[@name='name']" position="after">
                            <field name="type" required="1"/>
            </xpath>
                        <xpath expr="//field[@name='currency_id']" position="after">
                            <field name="type" invisible="1"/>
            </xpath>
            
<xpath expr="//button[@name='button_confirm']" position="replace">
<button name="button_confirm" type="object" states="approved" string="Confirm Order" class="oe_highlight" id="bid_confirm"/>           
</xpath>
                               
<xpath expr="//button[9]" position="replace"></xpath>           
            
<xpath expr="//button[@name='action_rfq_send']" position="after">
<button name="button_validate" type="object"  string="Validate" class="oe_highlight" attrs="{'invisible': ['|',('state','not in',['draft','sent']),('type','=','Stock Item')] }"/>           
</xpath>
            
<xpath expr="//button[@name='button_validate']" position="before">
<button name="button_approved" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': [('state','!=','validated')] }"/>           
</xpath>
<xpath expr="//button[@name='button_validate']" position="before">
<button name="button_approved" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': ['|',('state','not in',['draft','sent']),('type','in',['CAPEX','OPEX'])] }"/>           
</xpath>
            
<xpath expr="//button[@name='button_cancel']" position="replace">
<button name="button_cancel" states="draft,to approve,sent,purchase,validated,approved" string="Cancel" type="object"/>
</xpath>

<xpath expr="//button[@name='button_confirm']" position="after">
<button name="action_rfq_send" states="validated,approved" string="Re-Send by Email" type="object" context="{'send_rfq':True}"/>
</xpath>
            
<xpath expr="//button[@name='button_confirm']" position="after">
<button name="print_quotation" string="Print RFQ" type="object" states="validated,approved" groups="base.group_user"/>
</xpath>             

          </field>
      </record>

  </data>
</odoo>
