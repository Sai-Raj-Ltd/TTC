<odoo>
  <data>
          <record id="view_partner_form_extended" model="ir.ui.view">
        <field name="name">res.partner.form.extended</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
                <xpath expr="//div[1]" position="after">
                    <header>
                                        <button name="make_checker" string="Approve" type="object" class="oe_highlight" attrs="{'invisible':[('status','!=','Draft')]}"/>

                        <field name="status" widget="statusbar"/>

                    </header>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>
      
           <record id="view_partner_kanban_extended" model="ir.ui.view">
        <field name="name">res.partner.kanban.extended</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
                
            <xpath expr="//div[hasclass('oe_kanban_details')]//field[@name='display_name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>  
      
      
      
      
                <record id="product_template_form_view_extended" model="ir.ui.view">
        <field name="name">product.template.common.form.extended</field>
        <field name="model">product.template</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>
      
      
      
                      <record id="product_template_kanban_view_extended" model="ir.ui.view">
        <field name="name">product.template.common.kanban.extended</field>
        <field name="model">product.template</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="before">
                            <field name="rating" widget="priority" class="mr-3"/>
            </xpath>
          </field>
      </record>
      
      
                           <record id="purchase_order_form_extended" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']//field[@name='name']" position="after">
                            <field name="type" required="1"/>
            </xpath>
                        <xpath expr="//field[@name='currency_id']" position="after">
                            <field name="type" invisible="1"/>
            </xpath>
            
<xpath expr="//button[@name='button_confirm']" position="replace">
<button name="button_confirm" type="object" states="approved" string="Confirm Order" class="oe_highlight" id="bid_confirm"/>           
</xpath>
                               
<xpath expr="//button[9]" position="replace"></xpath>           
            
<xpath expr="//button[@name='action_rfq_send']" position="after">
<button name="button_validate" type="object"  string="Validate" class="oe_highlight" attrs="{'invisible': ['|',('state','not in',['draft','sent']),('type','not in',['CAPEX','OPEX'])] }"/>           
</xpath>
            
<xpath expr="//button[@name='button_validate']" position="before">
<button name="button_approved" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': [('state','!=','validated')] }"/>           
</xpath>
<xpath expr="//button[@name='button_validate']" position="before">
<button name="button_approved" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': ['|',('state','not in',['draft','sent']), ('type','!=','Stock Item')] }"/>           
</xpath>
            
<xpath expr="//button[@name='button_cancel']" position="replace">
<button name="button_cancel" states="draft,to approve,sent,purchase,validated,approved" string="Cancel" type="object"/>
</xpath>

<xpath expr="//button[@name='button_confirm']" position="after">
<button name="action_rfq_send" states="validated,approved" string="Re-Send by Email" type="object" context="{'send_rfq':True}"/>
</xpath>
            
<xpath expr="//button[@name='button_confirm']" position="after">
<button name="print_quotation" string="Print RFQ" type="object" states="validated,approved" groups="base.group_user"/>
</xpath>             

          </field>
      </record>




        <record id="view_move_form_extended" model="ir.ui.view">
        <field name="name">account.move.form.extended</field>
        <field name="model">account.move</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            
                        <xpath expr="//field[@name='show_name_warning']" position="after">
                            <field name="is_credit" invisible="1"/>
                             <field name="approved" invisible="1"/>
            </xpath>
            
<xpath expr="//button[@name='action_register_payment']" position="replace">
                        <button name="action_register_payment" id="account_invoice_payment_btn" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|','|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')), ('is_credit', '=', False),('approved','=',False)]}" context="{'dont_redirect_to_payments': True}" string="Register Payment" groups="account.group_account_invoice"/>
</xpath> 
            
<xpath expr="//button[@name='action_register_payment']" position="after">
<button name="get_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('is_credit','=',True),('approved','=',True),('state','=','draft')] }"/>
</xpath> 
          </field>
      </record>
  </data>
</odoo>
